<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/img"
        android:focusable="false"
        android:visibility="invisible"
        android:layout_width="@dimen/image_list_contact"
        android:background="@drawable/icon_click_effect_rec"
        android:layout_height="@dimen/image_list_contact"/>

    <TextView
        android:id="@+id/txt"
        android:hint="hello"
        android:layout_marginLeft="@dimen/image_list_contact"
        android:layout_marginRight="@dimen/button_height"
        android:textSize="@dimen/normal_font"
        android:layout_width="match_parent"
        android:gravity="center_vertical"

        android:layout_height="@dimen/image_list_contact"/>
    <ImageView
        android:id="@+id/sett"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_settings_black_36dp"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_click_effect"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"/>
</RelativeLayout>

